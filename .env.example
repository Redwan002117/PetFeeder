# Application
VITE_APP_TITLE="PetFeeder Hub"
VITE_APP_DESCRIPTION="Smart pet feeding solution"
VITE_APP_VERSION="1.0.0"

# Supabase Configuration
# Replace these with your actual Supabase project values
# For GitHub Pages deployment, set these as repository secrets
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Development Settings

# Analytics
VITE_ENABLE_ANALYTICS=true

# Feature Flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_DARK_MODE=true

# API Settings
VITE_API_TIMEOUT=30000
VITE_MAX_UPLOAD_SIZE=5242880

# Brevo SMTP Configuration
BREVO_SMTP_PASSWORD=your-brevo-smtp-password